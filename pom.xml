<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>gov.nist.healthcare.mu.ss-r2</groupId>
  <artifactId>ss-r2-config</artifactId>
  <version>1.0.0</version>
  <name>ss-r2-config</name>
  
    <dependencies>
		<dependency>
			<groupId>gov.nist.healthcare.mu.ss-r2</groupId>
			<artifactId>ss-r2-resource-bundle</artifactId>
			<version>${resourcebundle.version}</version>
		</dependency>
		<dependency>
			<groupId>gov.nist.healthcare.mu.ss-r2</groupId>
			<artifactId>ss-r2-message-validation</artifactId>
			<version>${messagevalidation.version}</version>	
		</dependency>
		<dependency>
			<groupId>gov.nist.hit.core.hl7v2</groupId>
			<artifactId>hit-core-hl7v2-api</artifactId>
			<version>${hitcorehl7v2.version}</version>
		</dependency>
		
    </dependencies>
		
	<build>
	    <plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.5.2</version>
			</plugin>
	      <plugin>
	        <groupId>org.apache.maven.plugins</groupId>
	        <artifactId>maven-compiler-plugin</artifactId>
	        <version>3.3</version>
	        <configuration>
	          <source>1.7</source>
	          <target>1.7</target>
	        </configuration>
	      </plugin>
	    </plugins>
  	</build>
  	
  	<scm>
		<connection>scm:git:https://github.com/usnistgov/hit-mu-tools-configs.git</connection>
		<developerConnection>scm:git:https://github.com/usnistgov/hit-mu-tools-configs.git</developerConnection>
	  <tag>ss-r2-config-1.0.0</tag>
  </scm>
	<distributionManagement>
		<repository>
			<id>releases</id>
			<url>http://vm-070.nist.gov:8081/nexus/content/repositories/releases</url>
		</repository>
		<snapshotRepository>
			<id>snapshots</id>
			<name>Internal Snapshots</name>
			<url>http://vm-070.nist.gov:8081/nexus/content/repositories/snapshots</url>
		</snapshotRepository>
	</distributionManagement>	
  	
	<properties>
		<hitcorehl7v2.version>1.0.3</hitcorehl7v2.version>
		<messagevalidation.version>1.0.0</messagevalidation.version>
		<resourcebundle.version>1.0.0</resourcebundle.version>
	</properties>
</project>